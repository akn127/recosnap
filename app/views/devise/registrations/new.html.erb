<%= render "shared/header" %>

<div class="registration-main">
  <div class="form-wrap">

    <h2 class="form-header-text" >新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"mail@recosnap.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <!--<% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br /> -->
        <%= f.password_field :password, autocomplete: "new-password" , placeholder:"半角英数字6文字以上"%>
      </div>

      <!--div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div-->

      <!-- div class="column-row">
        <%= link_to "パスワードを忘れた方はこちら", new_user_password_path %>
      </div-->

      <div class="actions">
        <%= f.submit "新規登録（無料）" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>
